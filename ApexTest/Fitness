public class Fitness {
    /*
     * method name - calculateBMI
     * return type - Integer
     * parameters - weight - Decimal(KG), height - Decimal(meters)
     */
    public static Decimal calculateBMI(Decimal weight, Decimal height){
        if(weight <= 0 || height <= 0 ) return 0;
        return (weight/(height * height));
    }
    /*
     * method name - calculatePace
     * return type - Integer
     * parameters - distance - Decimal(KM), timeTaken - Decimal(minutes)
     */
    public static Decimal calculatePace(Decimal distance, Decimal timeTaken){
        if(distance <= 0 || timeTaken <= 0 ) return 0;
        return (distance / timeTaken);
    }
}
